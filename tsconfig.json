{
  "compilerOptions": {
    /* Environment */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Node compatibility */
    "esModuleInterop": true,
    "types": ["node"],

    /* Output */
    "sourceMap": true,

    /* Type checking */
    "strict": true,
    "skipLibCheck": true
  }
}
