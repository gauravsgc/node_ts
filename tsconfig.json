{
  "compilerOptions": {
    /* Environment */
    "target": "ES2020",
    "lib": ["ES2020"],

    /* Module system */
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Paths */
    "rootDir": "src",
    "outDir": "dist",

    /* Node compatibility */
    "esModuleInterop": true,
    "types": ["node"],

    /* Output */
    "sourceMap": true,

    /* Type checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
